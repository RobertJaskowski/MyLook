<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_photo_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            />
        <!--android:src="@drawable/ic_perm_identity_black_24dp"-->

        <TextView
            android:id="@+id/card_photo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/card_photo_image"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="date"/>

        <TextView
            android:id="@+id/card_photo_averageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_photo_image"
            android:gravity="center_horizontal"
            android:layout_below="@id/card_photo_date"
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:text="@string/average"/>

        <TextView
            android:id="@+id/card_photo_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_photo_averageText"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/card_photo_image"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="average"/>


        <TextView
            android:id="@+id/card_photo_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/card_photo_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="15"/>

        <TextView
            android:id="@+id/card_photo_ratingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/card_photo_image"
            android:gravity="center_horizontal"
            android:layout_above="@id/card_photo_ratings"
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:text="@string/based_on_users"/>



    </RelativeLayout>


</android.support.v7.widget.CardView>